<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog/title</title>    
</head>
<body>
    <div class="grid grid-cols-6 h-full w-full">
        <div class="sidebar bg-blue-900 h-screen">
            <div class="bg-white px-0 py-3 h-10 w-5/6 rounded-md flex items-center justify-start" style="margin: 1rem auto;">
                <img class="block" src="https://www.dropbox.com/paper/ep/redirect/image?url=https%3A%2F%2Fpaper-attachments.dropboxusercontent.com%2Fs_D73A0E8D783F8CE9E8E902D7FA9CC67C5CDCC90EFDDC25D49970A6A4FF31D65E_1688626829187_logoo.png&hmac=x1mlTUrqLdEd5NrEJ1%2BHocE5pC1t2wi6O4ubpNY6ro0%3D&width=1490" alt="Image" height="60px" width="60px">
                <span class="font-bold text-xl text-blue-900 block">Janko</span>
            </div>
            <a href="/home" class="flex block items-center px-0 py-3 h-10 w-5/6 justify-start" style="margin: .5rem auto;">
                <img class="block ml-5 mr-4" src="https://www.dropbox.com/paper/ep/redirect/image?url=https%3A%2F%2Fpaper-attachments.dropboxusercontent.com%2Fs_02A2C42C96B6344CBDC9FE3D91698EA7C0E21FEA9EE434758B1DD83D5A367442_1688747102174_home.png&hmac=vMI2luB8%2FEYvSuuSNS6%2FiJhO2bAYNFEbXOuwQakyZsU%3D" alt="Image" height="20px" width="20px">
                <span class="text-sm text-gray-50 block">CMS Home</span>
            </a>
            <a href="/profile/edit" class="flex block items-center px-0 py-3 h-10 w-5/6 justify-start" style="margin: .5rem auto;">
                <img class="block ml-5 mr-4" src="https://www.dropbox.com/paper/ep/redirect/image?url=https%3A%2F%2Fpaper-attachments.dropboxusercontent.com%2Fs_02A2C42C96B6344CBDC9FE3D91698EA7C0E21FEA9EE434758B1DD83D5A367442_1688747917632_user.png&hmac=bk4Jn%2BhirPeaTmSnu%2BKfuVazAmraOi83OlPVqgwvYkM%3D&width=1490" alt="Image" height="20px" width="20px">
                <span class="text-sm text-gray-50 block">Edit Profile</span>
            </a>
            <a href="/logout" class="flex block items-center px-0 py-3 h-10 w-5/6 justify-start" style="margin: .5rem auto;">
                <img class="block ml-5 mr-4" src="https://www.dropbox.com/paper/ep/redirect/image?url=https%3A%2F%2Fpaper-attachments.dropboxusercontent.com%2Fs_02A2C42C96B6344CBDC9FE3D91698EA7C0E21FEA9EE434758B1DD83D5A367442_1688812037249_sign-out-alt.png&hmac=meErd0vwJCB6x3ngIicTQTp259HW1iF42R5m6nwEovc%3D&width=1490" alt="Image" height="20px" width="20px">
                <span class="text-sm text-gray-50 block">Logout</span>
            </a>
        </div>
        <div class="main col-span-5 h-screen">
            <div class="flex items-center justify-between px-6" style="height: 10%">
                <span class="font-bold text-sm text-blue-900 block">Janko</span>
                <a href="/profile/show">
                <% if (image) { %>                
                    <img src="<%= image %>" alt="" class="rounded-3xl" width="40px" height="40px">                
                <%} else { %>
                    <img src="https://www.dropbox.com/paper/ep/redirect/image?url=https%3A%2F%2Fpaper-attachments.dropboxusercontent.com%2Fs_02A2C42C96B6344CBDC9FE3D91698EA7C0E21FEA9EE434758B1DD83D5A367442_1688809434892_no%2Buser.png&hmac=ZvrRpYeawdErX4NGAGKRRopIena4EZUVwb8eupNfPf0%3D&width=1490" alt="" class="rounded-3xl" width="40px" height="40px">                
                <% } %>                    
                </a>
            </div>
            <div class="px-6 py-2" style="background: #F3F4F6; height: 90%">
                <div class="flex items-center justify-between">
                    <% if (articles.length == 0) { %>
                        <span class="block text-2xl my-4">No Posts Yet</span>
                    <%} else { %>
                        <span class="block text-2xl my-4">Posts</span>
                    <% } %>                    
                    <a href="/articles/new" class="bg-blue-500 text-white px-4 py-2 rounded-md">Add Post</a>
                </div>
                
                <% if (articles.length == 0) { %>                                
                    <span></span>
                <%} else { %>
                    <table class="border-collapse border border-slate-400">
                        <thead>
                          <tr>
                            <th class="border border-slate-300 p-2">Author</th>
                            <th class="border border-slate-300 p-2">Title</th>
                            <th class="border border-slate-300 p-2">Description</th>
                            <th class="border border-slate-300 p-2">Slug</th>
                            <th class="border border-slate-300 ">Created At</th>
                          </tr>
                        </thead>
                        <tbody>
                        <% articles.forEach(article => { %>            
                            <% if (article.user._id == userID) { %>
                                <tr>
                                    <td class="border border-slate-300 p-2">YOU (<%= article.user.name %>)</td>
                                    <td class="border border-slate-300 p-2"><a href="/articles/<%= article.slug %>"><%= article.title %></a></td>
                                    <td class="border border-slate-300 p-2"><%= article.description.slice(0, 50) %>...</td>
                                    <td class="border border-slate-300 p-2"><%= article.slug %></td>
                                    <td class="border border-slate-300 p-2"><%= article.createdAt.toLocaleDateString() %></td>
                                    <td class="border border-slate-300 p-2"><a href="articles/edit/<%= article.id %>" class="bg-blue-500 text-white py-2 px-4 rounded-md">Edit</a></td>
                                    <td class="border border-slate-300 p-2">
                                        <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="inline">
                                            <button type="submit" class="bg-red-500 py-2 px-4 text-white rounded-md">Delete</button>
                                        </form>
                                    </td>
                                  </tr>            
                            <%} else { %>
                                <tr>
                                    <td class="border border-slate-300 p-2"><%= article.user.name %></td>
                                    <td class="border border-slate-300 p-2"><a href="/articles/<%= article.slug %>"><%= article.title %></a></td>
                                    <td class="border border-slate-300 p-2"><%= article.description.slice(0, 50) %>...</td>
                                    <td class="border border-slate-300 p-2"><%= article.slug %></td>
                                    <td class="border border-slate-300 p-2"><%= article.createdAt.toLocaleDateString() %></td>                                
                                  </tr>    
                            <% } %>
                        <% }) %>
                        </tbody>
                    </table>
                <% } %>
            </div>
        </div>
    </div>
    <script src="https://cdn.tailwindcss.com"></script>
</body>
</html>